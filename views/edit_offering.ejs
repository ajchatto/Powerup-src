<option value="1.5 hr">1.5 hrs.</option>
<option value="2 hrs.">2 hrs.</option>
</select>
</td>
      <td>Days</td>
      <td>
      <input type="Checkbox" name='sun' value='Y' <%=data[0].sunday%>>Sun
      <input type="Checkbox" name='mon' value='Y' <%=data[0].monday%>>Mon
      <input type="Checkbox" name='tue' value='Y' <%=data[0].tueday%>>Tue
      <input type="Checkbox" name='wed' value='Y' <%=data[0].wedday%>>Wed
      <input type="Checkbox" name='thu' value='Y' <%=data[0].thuday%>>Thu
      <input type="Checkbox" name='fri' value='Y' <%=data[0].friday%>>Fri
      <input type="Checkbox" name='sat' value='Y' <%=data[0].satday%>>Sat
      </td>
    </tr>

