<option value="Every day">Every day</option>
</select>
</td>
    </tr>

    <tr>
      <td>Duration</td>
      <td>
<select class="input-small" name="duration"><option selected="selected" value="<%=data[0].duration%>"><%=data[0].duration%></option>
<option value="30 mins.">30 mins.</option>
<option value="45 mins.">45 mins.</option>
